<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyPlantsDetailActivity">


    <ImageView
        android:id="@+id/bt_close_in_myPlantsDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="310dp"
        android:contentDescription="@string/plant_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <TextView
        android:id="@+id/title_PlantDetail_in_afterScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:text="@string/my_plant"
        android:textColor="#3E3E3E"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_close_in_myPlantsDetail" />

    <TextView
        android:id="@+id/tv_plant_name_in_myPlantDetail"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/plant_name"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/bt_close_in_myPlantsDetail"
        app:layout_constraintTop_toBottomOf="@+id/bt_close_in_myPlantsDetail" />

    <TextView
        android:id="@+id/tv_plant_type_in_myPlantDetail"
        android:layout_width="129dp"
        android:layout_height="28sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/plant_type"
        android:textColor="#4A4A4A"
        app:layout_constraintStart_toStartOf="@+id/tv_plant_name_in_myPlantDetail"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_name_in_myPlantDetail" />

    <TextView
        android:id="@+id/title_plantedd"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/planted"
        android:textColor="@color/green_100"
        app:layout_constraintStart_toStartOf="@+id/tv_plant_type_in_myPlantDetail"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_type_in_myPlantDetail" />


    <TextView
        android:id="@+id/tv_planted_date_in_myPlantDetail2"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/planted_date"
        android:textColor="@color/green_100"
        app:layout_constraintStart_toEndOf="@+id/title_plantedd"
        app:layout_constraintTop_toTopOf="@+id/title_plantedd" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_for_plantPicture"
        android:layout_width="145dp"
        android:layout_height="190dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_name_in_myPlantDetail">

        <ImageView
            android:id="@+id/iv_plant_in_myPlantDetails"
            android:layout_width="90dp"
            android:layout_height="145dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:contentDescription="@string/plant_image"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/benefit"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/title_plantedd"
        app:layout_constraintTop_toBottomOf="@id/title_plantedd" />

    <TextView
        android:id="@+id/tv_benefit_description_in_MyPlantesDetail"
        android:layout_width="315dp"
        android:layout_height="138dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/benefit_desc"
        android:textColor="#838383"
        app:layout_constraintStart_toStartOf="@+id/title_benefit"
        app:layout_constraintTop_toBottomOf="@+id/title_benefit" />

    <TextView
        android:id="@+id/title_physical_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/physical_appearance"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_benefit_description_in_MyPlantesDetail"
        app:layout_constraintTop_toBottomOf="@+id/tv_benefit_description_in_MyPlantesDetail" />

    <TextView
        android:id="@+id/tv_physicalAppearance_in_MyPlantesDetail"
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/physical_appearance_desc"
        android:textColor="#838383"
        app:layout_constraintStart_toStartOf="@+id/title_physical_appearance"
        app:layout_constraintTop_toBottomOf="@+id/title_physical_appearance" />





</androidx.constraintlayout.widget.ConstraintLayout>