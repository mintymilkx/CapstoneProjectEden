<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.scan.CameraActivity">

    <Button
        style="@style/ButtonRegular"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_upload_image"
        android:text="@string/upload_image"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_place_holder"
        android:layout_marginTop="18dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:id="@+id/iv_place_holder"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:src="@drawable/ic_blank_image"/>

    <Button
        style="@style/ButtonRegular"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_camera"
        android:text="@string/capture_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/iv_place_holder"
        android:layout_marginTop="18dp"/>


    <Button
        android:id="@+id/btn_scan"
        style="@style/ButtonRegular"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Scan Plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_place_holder"
        app:layout_constraintVertical_bias="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>


</androidx.constraintlayout.widget.ConstraintLayout>