<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_horizontal|center_vertical"
    app:layout_anchorGravity="center_horizontal|center_vertical"
    tools:context=".fragment.HomeFragment">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="305dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/hello"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar_home"
        android:layout_width="73dp"
        android:layout_height="62dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hello"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/name"
        android:textColor="@color/dark_green"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hello"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <androidx.cardview.widget.CardView
        android:id="@+id/banner_point"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/avatar_home"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/avatar_home">

        <ImageView
            android:id="@+id/star_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="19dp"
            app:srcCompat="@drawable/star_point" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="54dp"
            android:fontFamily="@font/poppins_medium"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="@string/points"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_point_inHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="101dp"
            android:fontFamily="@font/poppins_bold"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="@string/point_overall"
            android:textColor="@color/dark_green"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="315dp"
        android:layout_height="105dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/banner_point"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/banner_point"
        app:layout_constraintTop_toBottomOf="@+id/banner_point">

        <ImageView
            android:id="@+id/iv_ornament"
            android:layout_width="95dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom|right"
            app:srcCompat="@drawable/people_peace" />

        <TextView
            android:id="@+id/desc_gardening_par1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="76dp"
            android:fontFamily="@font/mons_semibold"
            android:text="Did you know gardening can affect to the better mental health?"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />


        <TextView
            android:id="@+id/desc_gardening_par2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="76dp"
            android:fontFamily="@font/mons_semibold"
            android:text="Studies has proven that gardening able to lift up mood, decrease stress level, and lots more!"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/desc_gardening_par3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="76dp"
            android:fontFamily="@font/mons_semibold"
            android:text="So, let's just garden, shall we?"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TodayTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="300dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/today_s_task"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/more_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/more_details"
        android:textColor="#87B171"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/TodayTask"
        app:menu="@menu/bottom_nav_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/TodayTask">

        <TextView
            android:id="@+id/textView11"
            style="@style/TextViewBoldMons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="15dp"
            android:text="Keep your progress!"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/mons_semibold"
            android:text="Your plants need your attention and affection. Keep an eye for them please :D"
            android:textColor="@color/dark_green"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/forYourInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="For Your Information"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/banner_saveEarth"
        android:layout_width="315dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/forYourInformation">

        <TextView
            android:id="@+id/desc_globalWarming_par1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/mons_semibold"
            android:text="Plants and trees are important to save our earth from global warming by filtering pollution!"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/desc_globalWarming_par2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/mons_semibold"
            android:text="You choose the right path to invest your time and energy to start caring plant and trees!"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/desc_globalWarming_par3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="75sp"
            android:layout_marginRight="19sp"
            android:fontFamily="@font/mons_semibold"
            android:text="Thank you for you action! :D"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="9sp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
